@model LoginUsingIdentity.Models.Feedback
@{
    ViewBag.Title = "Feedback form";
}

<h1>
    Feedback Form
</h1>

<div class="row">
    <div class="col">

        <form method="post" asp-action="Create">

            <div class="form-group">
                <label asp-for="MultiCheck">skills</label>
                <input type="checkbox" />
                <label>Python</label>
                <input type="checkbox" />
                <label>C#</label>
                <input type="checkbox" />
                <label>Java</label>
                <input type="checkbox" />
                <label>Kotlin</label>
            </div>

            <div class="form-group">
                <label asp-for="TextArea">Text</label>
                <textarea  maxlength="200"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="RadioButton">Degree</label>
                <input type="radio" id="BE" value="B.E" />
                <label for="BE">B.E</label>
                <input type="radio" id="ME" value="M.E"/>
                <label for="ME">M.E</label>
                <input type="radio" id="Otherss" value="Others"/>
                <label for="Otherss">Others</label>
            </div>

            <div class="form-group">
                <label asp-for="Slider">Slider(1 to 10)</label>
                <input type="range" min="1" max="10" />
            </div>
            
            <button class="btn btn-primary" type="submit">Submit</button>
        </form>

    </div>
</div>
