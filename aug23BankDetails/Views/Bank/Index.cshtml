@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<BankDetails>

<div class="row">
    <div class="col-6">
        <h3>Customer Details</h3>
    </div>
    <div class="col-6">
        <a asp-controller="UserDetails" asp-action="Create" class="btn btn-info">Create New Account</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-bordered table-striped" style="width: 100%"  >
           
            <thead>
                <tr>
                    <th>Customer Id</th>
                    <th>Customer Name</th>
                    <th>Customer Adress</th>
                    <th>Customer Age</th>
                    <th>Customer Gender</th>
                    <th>Account Balance</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var item in Model)
            {
                <tr>
                    <td width="10%">@item.Id</td>
                    <td width="20%">@item.Name</td>
                    <td width="30%">@item.Address</td>
                    <td width="10%">@item.Age</td>
                    <td width="10%">@item.Gender</td>
                    <td width="20%">@item.OpeningBalance</td>
                </tr>
            }
            </tbody>

        </table>
    </div>
</div>
