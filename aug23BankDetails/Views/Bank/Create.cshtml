@{
    ViewData["Title"] = "Create";
}

@model BankDetails

<form method="post" asp-action="Create">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row" >
        <h2> Add Customer Details</h2>
    </div>
    <div class="row">
        <div class="col-12">

            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Name"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Address"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Age"></label>
                </div>
                <div class="col-6">
                    <input type="number" asp-for="Age" />
                    <span asp-validation-for="Age" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="Gender"></label>
                </div>
                <div class="col-6">
                    <input type="text" asp-for="Gender" />
                    <span asp-validation-for="Gender" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-6">
                    <label asp-for="OpeningBalance"></label>
                </div>
                <div class="col-6">
                    <input type="number" asp-for="OpeningBalance" />
                    <span asp-validation-for="OpeningBalance" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-8">
                    <input type="submit" class="btn btn-info w-50" />
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-danger w-50">Back</a>
                </div>
            </div>

        </div>
    </div>
</form>
