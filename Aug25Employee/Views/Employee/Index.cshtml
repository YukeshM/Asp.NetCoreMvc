@{
    ViewData["Title"] = "Index";
}
@model IEnumerable<EmployeeDetails>

<div class="row">
    <div class="col-6">
        <h2>Employee Details</h2>
    </div>
    <div class="col-6">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-info">Create New Employee</a>
    </div>
</div>

@*employee details*@
<div class="row">
    <div class="col-12">
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Designation</th>
                    <th>Department Id</th>
                    <th>Hire Date</th>
                </tr>
            </thead>

            <tbody>
                @foreach(var detail in Model)
            {
                <tr>
                    <td width="10%">@detail.Id</td>
                    <td width="20%">@detail.Name</td>
                    <td width="15%">@detail.Designation</td>
                    <td width="15%">@detail.DepartmentId</td>
                    <td width="10%">@detail.HireDate</td>
                    <td width="10%">
                        <a asp-action="Update" asp-route-id="@detail.Id" class="btn btn-primary">Update</a>
                    </td>
                    <td width="10%">
                        <a asp-action="Delete" asp-route-id="@detail.Id" class="btn btn-danger" onclick="return confirm('Are you sure to delete this row?')">Delete</a>
                    </td>
                </tr>
            }
            </tbody>

        </table>
    </div>
</div>