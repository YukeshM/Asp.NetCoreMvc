
@{
    ViewData["Title"] = "Index";
}

@model IEnumerable<EmployeeDetail>

<div class="row">
    <div class="col-6">
        <h2>Employee Details</h2>
    </div>
    <div class="col-6">
        <a asp-controller="Employee" asp-action="Create" class="btn btn-info">Create New Employee</a>
    </div>
</div>

<form asp-action="Index" method="get">
    <div class="row">
        <div class="col-6">
            <label>Search</label>
        </div>
        <div class="col-6">
            <input type="text" name="searchText" value="@ViewData["currentSearch"]" />
            <input type="submit" class="btn btn-primary" value="Search" />
        </div>
    </div>
</form>

@*employee details*@
<div class="row">
    <div class="col-12">
        <table class="table table-bordered table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>ID</th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]">Name</a>
                    </th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DesignationSortParam"]">Designation</a>
                    </th>
                    <th>Department Id</th>
                    <th>
                        <a asp-action="Index" asp-route-sortOrder="@ViewData["DateSortParam"]">Hire Date</a>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td width="10%">@detail.Id</td>
                        <td width="20%">@detail.Name</td>
                        <td width="15%">@detail.Designation</td>
                        <td width="15%">@detail.DepartmentId</td>
                        <td width="10%">@detail.HireDate</td>
                        <td width="10%">
                            <a asp-action="Update" asp-route-id="@detail.Id" class="btn btn-primary">Update</a>
                        </td>
                        <td width="10%">
                            <a asp-action="Delete" asp-route-id="@detail.Id" class="btn btn-danger"
                               onclick="return confirm('Are you sure to delete this row?')">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
